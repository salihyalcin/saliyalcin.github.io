---
import Layout from '../layouts/Layout.astro';

const posts = [
	{
		title: 'Getting Started with Web Development',
		excerpt: 'Learn the basics of web development and start your journey as a developer.',
		date: 'April 20, 2024',
		slug: 'getting-started-web-dev'
	},
	{
		title: 'Understanding React Hooks',
		excerpt: 'A deep dive into React Hooks and how they can improve your components.',
		date: 'April 18, 2024',
		slug: 'understanding-react-hooks'
	},
	{
		title: 'Building Scalable APIs with Node.js',
		excerpt: 'Best practices for building production-ready APIs using Node.js.',
		date: 'April 15, 2024',
		slug: 'scalable-nodejs-apis'
	}
];
---

<Layout title="Blog">
	<div class="blog">
		<h1>Blog</h1>
		<div class="post-grid">
			{posts.map(post => (
				<article class="post-card">
					<div class="content">
						<span class="date">{post.date}</span>
						<h2>{post.title}</h2>
						<p>{post.excerpt}</p>
						<a href={`/blog/${post.slug}`} class="read-more">
							Read More â†’
						</a>
					</div>
				</article>
			))}
		</div>
	</div>
</Layout>

<style>
	.blog {
		max-width: 800px;
		margin: 0 auto;
	}
	h1 {
		font-size: 2.5rem;
		margin-bottom: 2rem;
	}
	.post-grid {
		display: grid;
		gap: 2rem;
	}
	.post-card {
		background: white;
		border-radius: 8px;
		overflow: hidden;
		box-shadow: 0 2px 8px rgba(var(--accent-dark), 0.1);
		transition: transform 0.2s;
	}
	.post-card:hover {
		transform: translateY(-4px);
	}
	.content {
		padding: 1.5rem;
	}
	.date {
		color: #666;
		font-size: 0.9rem;
	}
	h2 {
		margin: 0.5rem 0;
		font-size: 1.5rem;
		color: rgb(var(--accent));
	}
	p {
		margin: 1rem 0;
		color: #444;
		line-height: 1.6;
	}
	.read-more {
		display: inline-block;
		color: rgb(var(--accent));
		text-decoration: none;
		font-weight: 500;
		transition: color 0.2s;
	}
	.read-more:hover {
		color: rgb(var(--accent-dark));
	}
</style>